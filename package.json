{
  "name": "node-adapter",
  "version": "1.0.1",
  "description": "A lightweight and extensible HTTP adapter, editable HTTP server, Webhook transformation, request relay platform. based on koa",
  "main": "app.js",
  "scripts": {
    "start": "node -r ts-node/register src/main.ts",
    "test": "jest --verbose --detectOpenHandles",
    "test_prod": "jest --verbose --detectOpenHandles --coverage && codecov --token=2d13016a-614b-4266-8f83-aeffbece3d61",
    "dev": "cross-env CONF_PATH=./adapters-dev DEBUG=server:* nodemon -r ts-node/register src/main.ts",
    "dev_start": "cross-env DEBUG=server:* node -r ts-node/register src/main.ts",
    "dist_start": "npm run build && node dist/main.js",
    "dist_min_start": "node dist/http-adapter-1.0.1.js",
    "lint": "tslint -p tsconfig.json",
    "build": "tslint -p tsconfig.json && tsc -p tsconfig.json",
    "build_prod": "tslint -p tsconfig.json && webpack --config webpack.config.js --progress --color",
    "doc": "compodoc -p tsconfig.json -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Code2Life/http-adapter.git"
  },
  "keywords": [
    "http-server",
    "adapter",
    "webhook",
    "relay",
    "transform"
  ],
  "author": "Code2Life",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Code2Life/http-adapter/issues"
  },
  "homepage": "https://github.com/Code2Life/http-adapter#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "debug": "^4.1.1",
    "js-yaml": "^3.13.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.11",
    "prom-client": "^11.3.0",
    "uuid": "^3.3.2",
    "typescript": "^3.4.3",
    "ts-node": "^8.0.3"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.6",
    "@types/debug": "^4.1.3",
    "@types/jest": "^24.0.11",
    "@types/js-yaml": "^3.12.1",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-router": "^7.0.40",
    "@types/koa-static": "^4.0.1",
    "@types/koa2-cors": "^2.0.1",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.4",
    "@types/uuid": "^3.4.4",
    "clean-webpack-plugin": "^0.1.19",
    "codecov": "^3.3.0",
    "cross-env": "^5.2.0",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "tslint": "^5.15.0",
    "webpack": "^4.26.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  }
}
